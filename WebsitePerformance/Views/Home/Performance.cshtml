@model WebsitePerformance.Models.PerformanceSitemap

@{
    ViewData["Title"] = "View";
}

<h3>Website performance</h3>

<h5>All time values are in milliseconds</h5>

<div style="width:80%;">
    <canvas id="chart"></canvas>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Uri</th>
            <th>Average</th>
            <th>Minimum</th>
            <th>Maximum</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.UriPerformances)
        {
            <tr>
                <td>
                    @item.Uri.ToString()
                </td>
                <td>
                    @item.AverageTime
                </td>
                <td>
                    @item.MinTime
                </td>
                <td>
                    @item.MaxTime
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>

<script type="text/javascript">
    var dataJson = JSON.parse('@Json.Serialize(@Model.UriPerformances)');

    var data = [];
    var labels = [];
    for (var i = 0; i < dataJson.length; i++) {
        data.push(dataJson[i].averageTime);
        labels.push(dataJson[i].uri);
    }

    var chartColors = {
      blue: 'rgb(54, 162, 235)',
    };

    var config = {
      type: 'line',
        data: {
            labels: this.labels,
        datasets: [{
          label: "Average response time",
          backgroundColor: chartColors.blue,
            borderColor: chartColors.blue,
            data: this.data,
          fill: false,
        }]
      },
    };

    var ctx = document.getElementById("chart").getContext("2d");
    window.myLine = new Chart(ctx, config);

</script>
